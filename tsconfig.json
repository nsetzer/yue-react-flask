{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false
    },
    "include": [
        "./src/**/*.tsx",
        "./src/*.tsx",
    ],
    "exclude": [
        "./src/**/*.test.tsx"
    ]
}
